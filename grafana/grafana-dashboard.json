{
  "id": null,
  "uid": "mlops-fastapi-dashboard",
  "title": "MLOps FastAPI Monitoring Dashboard",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 2,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Redis Status",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 3 },
      "targets": [
        { "expr": "redis_up", "refId": "A" }
      ],
      "colorMode": "background",
      "options": { "reduceOptions": { "calcs": ["last"] } }
    },
    {
      "type": "stat",
      "title": "CPU Usage (%)",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 3 },
      "targets": [
        { "expr": "system_cpu_percent", "refId": "A" }
      ],
      "options": { "reduceOptions": { "calcs": ["last"] } }
    },
    {
      "type": "stat",
      "title": "RAM Used (MB)",
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 3 },
      "targets": [
        { "expr": "system_ram_used_mb", "refId": "A" }
      ]
    },
    {
      "type": "stat",
      "title": "Disk Used (MB)",
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 3 },
      "targets": [
        { "expr": "system_disk_used_mb", "refId": "A" }
      ]
    },
    {
      "type": "bargauge",
      "title": "Cache Hits (per key)",
      "gridPos": { "x": 0, "y": 3, "w": 6, "h": 4 },
      "targets": [
        { "expr": "sum by (key) (redis_cache_hit_total)", "refId": "A" }
      ]
    },
    {
      "type": "bargauge",
      "title": "Cache Misses (per key)",
      "gridPos": { "x": 6, "y": 3, "w": 6, "h": 4 },
      "targets": [
        { "expr": "sum by (key) (redis_cache_miss_total)", "refId": "A" }
      ]
    },
    {
      "type": "stat",
      "title": "Training Status",
      "gridPos": { "x": 12, "y": 3, "w": 6, "h": 4 },
      "targets": [
        { "expr": "training_status", "legendFormat": "{{task}}", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Prediction Count",
      "gridPos": { "x": 0, "y": 7, "w": 12, "h": 5 },
      "targets": [
        { "expr": "increase(prediction_total{type=\"parent\"}[5m])", "legendFormat": "Parent", "refId": "A" },
        { "expr": "increase(prediction_total{type=\"child\"}[5m])", "legendFormat": "Child", "refId": "B" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Training Duration (Seconds)",
      "gridPos": { "x": 12, "y": 7, "w": 12, "h": 5 },
      "targets": [
        { "expr": "training_duration_seconds_sum", "legendFormat": "{{task}}", "refId": "A" }
      ]
    },
    {
      "type": "heatmap",
      "title": "Prediction Latency Heatmap (Parent)",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [
        { "expr": "rate(prediction_latency_seconds_bucket{type=\"parent\"}[5m])", "refId": "A" }
      ]
    },
    {
      "type": "heatmap",
      "title": "Prediction Latency Heatmap (Child)",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "targets": [
        { "expr": "rate(prediction_latency_seconds_bucket{type=\"child\"}[5m])", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "API Request Rate",
      "gridPos": { "x": 0, "y": 20, "w": 24, "h": 5 },
      "targets": [
        { "expr": "sum(rate(http_requests_total[1m]))", "refId": "A" }
      ]
    }
  ]
}